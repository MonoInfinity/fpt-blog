<div>
      <label>@Model.Label</label>
      <div class="flex flex-col mt-2 sm:flex-row">
            <div class="mr-2 form-check">
                  <input id="status-active" class="form-check-input" type="radio" name="@Model.Name" value="1"
                        checked="" @(Model.Value ? "checked" : "")>
                  <label class="form-check-label" for="status-active">Active</label>
            </div>
            <div class="mt-2 mr-2 form-check sm:mt-0">
                  <input id="status-inactive" class="form-check-input" type="radio" name="@Model.Name" value="2"
                        @(Model.Value ? "" : "checked")>
                  <label class="form-check-label" for="status-inactive">Inactive</label>
            </div>
      </div>
</div>
