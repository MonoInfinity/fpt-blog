@using FPTBlog.Src.PostModule.Entity
@if (Model == PostStatus.DENY)
{
    <div class="inline-flex items-center px-2 space-x-1 text-red-800 bg-red-100 rounded-full">
        <div class="text-xs font-semibold leading-5 ">
            Denied
        </div>
    </div>
}
else if (Model == PostStatus.APPROVED)
{

    <div class="inline-flex items-center px-2 space-x-1 text-green-800 bg-green-100 rounded-full">
        <div class="text-xs font-semibold leading-5 ">
            Approved
        </div>
    </div>
}
else
{
    <div class="inline-flex items-center px-2 space-x-1 text-yellow-700 bg-yellow-100 rounded-full">
        <div class="text-xs font-semibold leading-5 ">
            Waiting
        </div>
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
