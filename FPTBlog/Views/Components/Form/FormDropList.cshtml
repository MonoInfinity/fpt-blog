@{
    var error = $"{Model.Name.ToUpper()}ERROR";

    var list = (SelectList)Model.List;
}

<div class="flex flex-col flex-1 space-y-1">
    <label class="block font-semibold capitalize">
        @Model.Label
    </label>
    <select class="block w-full px-2 py-1 duration-300 border outline-none h-9 focus:border-tango-500 safari"
        id="@Model.Name" name="@Model.Name">
        @foreach (SelectListItem item in list.Items)
        {
            if (item.Value == Model.Value)
            {
                <option value="@item.Value" selected>@item.Text</option>
            }
            else
            {
                <option value="@item.Value">@item.Text</option>
            }
        }
    </select>
    <span class="block text-red-500 fade-in" id="@error" data-label="@Model.Label"></span>
</div>
