@{
    var error = $"{Model.Name.ToUpper()}ERROR";
    var result = $"{@Model.Name}Result";
    var badge = $"{@Model.Name}Badge";
}


<div class="flex flex-col flex-1 space-y-1">
    <label class="block font-semibold capitalize">@Model.Label</label>
    <div id="@badge"
        class="flex flex-wrap w-full px-2 py-1 text-xs duration-300 border rounded-sm hover:border-tango-500 min-h-9.5">

    </div>
    <div class="relative">

        <input autocomplete="off" placeholder="@Model.Placeholder" id="@Model.Name" name="@Model.Name" type="text"
            value=""
            class="block w-full duration-200 border-gray-300 rounded-md shadow-sm outline-none focus:ring-tango-500 focus:border-tango-500 sm:text-sm">

        <ul class="absolute left-0 z-30 w-full text-xs bg-white border shadow-sm top-full" id="@result">

        </ul>
    </div>


    <span class="block text-red-500 fade-in" id="@error" data-label="@Model.Label"></span>
</div>
