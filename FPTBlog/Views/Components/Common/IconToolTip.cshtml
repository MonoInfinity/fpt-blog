<div class="relative tooltip">
    @await Html.PartialAsync((string) Model.Icon)
    <div
        class="absolute z-10 invisible p-2 duration-300 delay-500 transform translate-y-4 border rounded-md shadow-md opacity-0 bg-tango-50 content">
        <div class="flex">
            <div class="flex-1 md:flex md:justify-between">
                <p class="text-sm text-tango-700">
                    @Model.Description
                </p>
            </div>
        </div>
    </div>
</div>
