@using FPTBlog.Views.Components.Form;
@using Microsoft.AspNetCore.Html;
@{
    ViewData["Title"] = Routers.ChangePass.Title;
    var formBuilder = new FormBuilder(this.Context, this.ViewData);
}


<div class="absolute top-0 left-0 z-50 flex items-center justify-center flex-1 w-full min-h-screen p-2 bg-1">
    <div
        class="w-full px-2 py-8 space-y-4 bg-white border rounded-md shadow-xl md:px-4 md:py-16 md:w-96 fade-in bg-opacity-90">

        @formBuilder.FormWrapper("Change Password","changePassForm", "Confirm change password",new IHtmlContent[]
        {
        formBuilder.PasswordField("oldPassword", "Old Password"),
        formBuilder.PasswordField("newPassword", "New Password"),
        formBuilder.PasswordField("confirmNewPassword", "Confirm New Password")
        })

    </div>
</div>