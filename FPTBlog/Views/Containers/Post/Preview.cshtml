@using FPTBlog.Src.BlogModule.Entity
@using FPTBlog.Src.CategoryModule.Entity
@using Microsoft.AspNetCore.Html

@section Styles {
<link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet">
}


@{


    var blog = (Blog)this.ViewData["blog"];
    var content = new HtmlString(blog.Content);

    this.ViewData["Title"] = blog.Title;
    var editorLink = $"{Routers.GetBlogEditor.Link}?blogId={blog.BlogId}";
}

<div class="flex">
    <a href="@editorLink" class="block p-2 font-medium text-center text-white rounded-sm bg-tango-500">Go back to
        editor</a>
</div>
<div class="ql-editor">
    @content
</div>
<div>
    @foreach (var item in blog.BlogTags)
    {
        <div>
            @item.Tag.Name
        </div>
    }
</div>
