@using FPTBlog.Views.Components.Form;

@section Styles {
<link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet">
}

@{
    var formBuilder = new FormBuilder(this.Context, this.ViewData);
    var blog = this.ViewData["blog"];
}

<div class="flex-1 ">

    <form class="w-screen px-2 py-8 mx-auto space-y-4 md:max-w-screen-lg" id="createBlogForm">
        <h1 class="text-2xl font-semibold">Create New Blog</h1>
        @formBuilder.TextField("title","Blog Tile")
        @formBuilder.SelectDropList("categoryId", "Category")
        <div class="flex flex-col flex-1 space-y-1">
            <p class="font-semibold">Content</p>
            @formBuilder.FieldMessage("content")
            <div class="">
                <div id="editor" class="flex-1 min-h-120">

                </div>
            </div>
        </div>

        @formBuilder.Button("Create")
    </form>
</div>







@section Scripts {
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="https://cdn.quilljs.com/1.3.7/quill.js"></script>
<script src="~/js/createBlog.js" defer async></script>

}
