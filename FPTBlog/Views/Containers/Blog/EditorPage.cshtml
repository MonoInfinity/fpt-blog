@using FPTBlog.Src.BlogModule.Entity
@section Styles {
<link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet">
}

@{
    Blog blog = (Blog)ViewData["blog"];
    string blogId = blog.BlogId ?? "123";
}


<!-- Create the editor container -->
<div>
    <div id="blogId">
        @blogId
    </div>
    <div id="editor">
        <p>Hello World!</p>
    </div>
</div>
<div>
    <button type="button" id="send" class="p-2 text-white bg-blue-500">
        Send
    </button>
    <button type="button" id="save" class="p-2 text-white bg-blue-500">
        Save
    </button>
</div>



@section Scripts {
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="https://cdn.quilljs.com/1.3.7/quill.js"></script>
<script src="~/js/createBlog.js" defer async></script>

}
