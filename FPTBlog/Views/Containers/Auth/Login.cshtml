@{
    ViewData["Title"] = Routers.AuthPostLogin.Title;
}

@await Html.PartialAsync("../../Components/Common/SideLogo.cshtml")
<div class="fixed top-0 left-0 flex items-center justify-center w-full min-h-screen bg-1">
    @* Content Start *@
    <div
        class="w-full px-4 py-8 mx-2 space-y-4 bg-white border rounded-md shadow-xl md:px-4 md:py-16 md:w-96 intro-y bg-opacity-90">
        <h1 class="text-4xl font-semibold text-center">Login Account</h1>
        @* Form Start *@

        @await Html.PartialAsync("../../Components/Form/FormMsg.cshtml")
        <form class="space-y-6 fade-in" id="loginForm">
            @await Html.PartialAsync("../../Components/Form/TextField.cshtml",
            new {Name="username", Label="Username", Type="text", Value=""})
            @await Html.PartialAsync("../../Components/Form/TextField.cshtml",
            new { Name="password", Label="Password", Type="password", Value=""})
            @await Html.PartialAsync("../../Components/Form/FormBtn.cshtml",
            new {Label="Sign In" })
        </form>
        @* Form End *@

        @* Support Start *@
        <div class="space-y-2">
            @await Html.PartialAsync("../../Components/Form/FormDivider.cshtml")
            @await Html.PartialAsync("../../Components/Form/FormGoogle.cshtml")
            @await Html.PartialAsync("../../Components/Form/FormBottomLink.cshtml",
            new {Label="Register New Account Instead?", Link = Routers.AuthPostRegister.Link})
        </div>
        @* Support End *@
    </div>
    @* Content End *@
</div>


@section Scripts {

<script src="https://accounts.google.com/gsi/client" async defer></script>
<script src="/js/auth-login.js"></script>

}
